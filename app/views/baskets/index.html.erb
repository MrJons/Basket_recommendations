<div class="container">

  <div class="reccomendations col-lg-4">

    <h3>Add these weekly purchases?</h3><br>

    <% if @recommendations.any? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @recommendations.each do |item, price| %>
            <tr>
              <td><%= item %></td>
              <td>£<%= '%.2f' % price %></td>
              <td><a class="btn btn-primary btn-xs pull-right" >Add to cart</a></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h3>Uh oh!</h3>
      <p>There are currently no recommendations, please build up a history so we
        know what you like.</p>
    <% end %>

  </div>

  <div class="basket_items col-lg-8">

    <h3>Your current basket...</h3><br>

    <% if @basket_contents.any? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>

        <% @basket_contents.each do |item| %>
          <tr>
            <td><%= item.product %></td>
            <td>£<%= item.price %></td>
          </tr>
        <% end %>
        <tr>
          <td><b>Total</b></td>
          <td><b>£<%= @basket_total %></b></td>
        </tr>

        </tbody>
      </table>

      <a class="btn btn-primary btn-xl pull-right" >Proceed</a>

    <% else %>
      <h2>There is currently nothing in your basket.</h2>
    <% end %>

  </div>

</div>
